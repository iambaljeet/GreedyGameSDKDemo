<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.activity.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLoadAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Add"
        app:layout_constraintBottom_toTopOf="@+id/adViewHomeBanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.greedygame.core.adview.GGAdview
        android:id="@+id/adViewHomeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adsMaxHeight="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>